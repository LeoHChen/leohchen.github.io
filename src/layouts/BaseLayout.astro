---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "LeoChen's Personal Blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        /* Typography */
        --font-body: Georgia, 'Times New Roman', serif;
        --font-heading: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        --font-mono: ui-monospace, Menlo, Monaco, 'Cascadia Code', 'Source Code Pro',
                     Consolas, 'Courier New', monospace;

        /* Light mode colors (default) */
        --color-bg: #fafafa;
        --color-text: #333333;
        --color-text-secondary: #666666;
        --color-border: #e0e0e0;
        --color-accent: #3B82F6;
        --color-accent-hover: #2563EB;
        --color-code-bg: #f5f5f5;
        --color-code-border: #e0e0e0;

        /* Spacing */
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 1.5rem;
        --spacing-lg: 2rem;
        --spacing-xl: 3rem;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color-bg: #1a1a1a;
          --color-text: #e5e5e5;
          --color-text-secondary: #a0a0a0;
          --color-border: #333333;
          --color-code-bg: #2a2a2a;
          --color-code-border: #404040;
        }
      }

      body {
        font-family: var(--font-body);
        font-size: 18px;
        line-height: 1.65;
        background: var(--color-bg);
        color: var(--color-text);
        padding: var(--spacing-md);
        max-width: 720px;
        margin: 0 auto;
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border-color 0.2s ease;
      }

      a:hover {
        border-bottom-color: var(--color-accent);
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        margin: var(--spacing-lg) 0 var(--spacing-sm);
        font-weight: 600;
        line-height: 1.2;
        color: var(--color-text);
      }

      h1 {
        font-size: 2.5rem;
        margin-top: 0;
      }

      h2 {
        font-size: 1.75rem;
      }

      h3 {
        font-size: 1.25rem;
      }

      p {
        margin-bottom: var(--spacing-sm);
      }

      code {
        font-family: var(--font-mono);
        background: var(--color-code-bg);
        padding: 0.125rem 0.25rem;
        border: 1px solid var(--color-code-border);
        border-radius: 2px;
        font-size: 0.9em;
      }

      pre {
        background: var(--color-code-bg);
        border: 1px solid var(--color-code-border);
        padding: var(--spacing-sm);
        overflow-x: auto;
        margin: var(--spacing-sm) 0;
      }

      pre code {
        background: none;
        border: none;
        padding: 0;
      }

      ul, ol {
        margin-left: var(--spacing-lg);
        margin-bottom: var(--spacing-sm);
      }

      hr {
        border: none;
        border-top: 1px solid var(--color-border);
        margin: var(--spacing-lg) 0;
      }

      button {
        font-family: var(--font-heading);
        background: var(--color-bg);
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: var(--spacing-xs) var(--spacing-sm);
        cursor: pointer;
        font-size: 0.9rem;
        transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
      }

      button:hover {
        background: var(--color-accent);
        color: #ffffff;
        border-color: var(--color-accent);
      }

      input, textarea {
        font-family: var(--font-heading);
        background: var(--color-bg);
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: var(--spacing-xs) var(--spacing-sm);
        font-size: 1rem;
        width: 100%;
        transition: background-color 0.2s ease, border-color 0.2s ease;
      }

      input:focus, textarea:focus {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
        border-color: var(--color-accent);
      }
    </style>
  </head>
  <body>
    <header>
      <nav style="border-bottom: 1px solid var(--color-border); padding-bottom: var(--spacing-sm); margin-bottom: var(--spacing-lg);">
        <a href="/" style="border: none; font-weight: 600; font-size: 1.2rem;">LeoChen's Personal Blog</a>
        <span style="margin: 0 var(--spacing-sm);">|</span>
        <a href="/about" style="border: none;">About</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer style="border-top: 1px solid var(--color-border); margin-top: var(--spacing-xl); padding-top: var(--spacing-lg); text-align: center; font-size: 0.9rem;">
      <p>&copy; {new Date().getFullYear()} LeoChen's Personal Blog</p>
    </footer>
  </body>
</html>
