---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { formatDate } from '../utils/format-date';
import TagCloud from '../components/TagCloud.astro';
import Calendar from '../components/Calendar.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="LeoChen's Personal Blog">
  <h1>Recent Posts</h1>

  <div style="display: grid; gap: var(--spacing-lg); margin-bottom: var(--spacing-xl);">
    {sortedPosts.map((post) => (
      <article style="border-bottom: 1px solid var(--color-border); padding-bottom: var(--spacing-md);">
        <h2 style="margin-top: 0;">
          <a href={`/blog/${post.slug}`} style="border: none;">
            {post.data.title}
          </a>
        </h2>
        <p style="color: var(--color-text-secondary); font-size: 0.9rem; margin-bottom: var(--spacing-sm);">
          {formatDate(post.data.pubDate)}
        </p>
        <p>{post.data.description}</p>
        {post.data.tags.length > 0 && (
          <div style="margin-top: var(--spacing-xs);">
            {post.data.tags.map((tag) => (
              <a
                href={`/tags/${tag}`}
                style="display: inline-block; border: 1px solid var(--color-border); padding: 0.25rem 0.5rem; margin-right: var(--spacing-xs); margin-top: var(--spacing-xs); font-size: 0.85rem;"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </article>
    ))}
  </div>

  <div style="display: grid; gap: var(--spacing-xl); margin-top: var(--spacing-xl);">
    <section>
      <h2>Tags</h2>
      <TagCloud />
    </section>

    <section>
      <h2>Archive</h2>
      <Calendar />
    </section>
  </div>
</BaseLayout>
